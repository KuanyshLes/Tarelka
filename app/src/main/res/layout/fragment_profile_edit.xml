<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="kz.production.kuanysh.tarelka.ui.fragments.ProfileFragment"
    android:weightSum="25">
    <FrameLayout
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:weightSum="10">

            <TextView
                android:id="@+id/profile_edit_save"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:layout_margin="16dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Сохранить"
                android:textColor="@color/colorWhite" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3.5"
                android:orientation="horizontal"
                android:weightSum="10">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4">

                </View>

                <carbon.widget.ImageView
                    android:id="@+id/profile_edit_photo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right"
                    android:layout_weight="2"
                    app:carbon_cornerRadius="8dp"
                    android:src="@mipmap/profile_photo"
                    app:civ_border_color="@color/colorWhite"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/profile_pro"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/profile_edit_add_photo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.9"
                android:gravity="center"
                android:text="Добавить фото"
                android:textColor="@color/colorWhite"
                android:textSize="16sp">

            </TextView>


        </LinearLayout>


    </FrameLayout>
    <LinearLayout
        android:layout_weight="15"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:weightSum="8">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="left|bottom"
            android:textSize="15sp"
            android:text="Ф.И.О" />

        <EditText
            android:layout_weight="1.2"
            android:id="@+id/profile_edit_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="left|top"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text=""
            android:textSize="16sp"
            android:inputType="text"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="left|center"
            android:textSize="15sp"
            android:text="Вес,кг" />

        <EditText
            android:layout_weight="1.2"
            android:id="@+id/profile_edit_weight"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:scrollbars="vertical"
            android:gravity="left|top"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text=""
            android:inputType="number"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="left|center"
            android:textSize="15sp"
            android:text="Возраст" />

        <EditText
            android:id="@+id/profile_edit_age"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="left|top"
            android:scrollbars="vertical"
            android:text=""
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="left|center"
            android:textSize="15sp"
            android:text="Рост,см" />

        <EditText
            android:id="@+id/profile_edit_height"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:gravity="left|top"
            android:scrollbars="vertical"
            android:text=""
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp" />

