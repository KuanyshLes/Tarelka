<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="kz.production.kuanysh.tarelka.ui.fragments.ProfileFragment"
    android:weightSum="25">
    <FrameLayout
        android:layout_weight="9.3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:weightSum="10">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_margin="16dp"
                android:layout_height="0dp"
                android:weightSum="10">
                <ImageView
                    android:id="@+id/profile_edit_back"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:layout_gravity="left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/glyph_back_arrow"/>
                <View
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />


                <TextView
                    android:id="@+id/profile_edit_save_new"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="4"
                    android:gravity="right|center"
                    android:text="Сохранить"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.1"
                android:orientation="horizontal"
                android:weightSum="10">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4.13">

                </View>

                <carbon.widget.ImageView
                    android:id="@+id/profile_edit_photo_new"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="right"
                    android:adjustViewBounds="false"
                    android:scaleType="centerCrop"
                    android:layout_weight="2.1"
                    app:carbon_cornerRadius="8dp"
                    android:src="@mipmap/profile_photo"
                    app:civ_border_color="@color/colorWhite"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/profile_pro"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="16dp"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/profile_edit_add_photo_new"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.9"
                android:gravity="center"
                android:text="Добавить фото"
                android:textColor="@color/colorWhite"
                android:textSize="16sp">

            </TextView>


        </LinearLayout>


    </FrameLayout>
    <LinearLayout
        android:layout_weight="15"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:weightSum="8">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="left|bottom"
            android:textSize="15sp"
            android:text="Ф.И.О" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/profile_edit_name_new"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="left|top"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text=""
            android:textSize="16sp"
            android:inputType="text"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="left|center"
            android:textSize="15sp"
            android:text="Вес,кг" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/profile_edit_weight_new"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:scrollbars="vertical"
            android:gravity="left|top"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text=""
            android:inputType="number"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="left|center"
            android:textSize="15sp"
            android:text="Возраст" />

        <EditText
            android:id="@+id/profile_edit_age_new"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|top"
            android:scrollbars="vertical"
            android:text=""
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="left|center"
            android:textSize="15sp"
            android:text="Рост,см" />

        <EditText
            android:id="@+id/profile_edit_height_new"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|top"
            android:scrollbars="vertical"
            android:text=""
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="16sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/profile_edit_aim_new_card"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="1dp"
            app:contentPadding="2dp">

            <TextView
                android:id="@+id/profile_edit_aim_new"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:padding="5dp"
                android:text="Stu Under Rise And Fall of A Lord of the rings seasons coming"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16.5sp" />

        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
