<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="kz.production.kuanysh.tarelka.ui.fragments.MainTaskFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/chat_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Отправить сообщение"
                android:textColor="@android:color/white"
                android:textSize="@dimen/toolbarTitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.433"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.515" />

            <ImageView
                android:id="@+id/send_message_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/glyph_back_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_toolbar"
        android:layout_margin="10dp"
        android:weightSum="15">
        <LinearLayout
            android:layout_weight="13.7"
            android:id="@+id/linearLayout0"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                app:contentPadding="1dp"
                app:cardElevation="5dp"
                android:scrollbars="vertical"
                app:cardCornerRadius="3dp">
                <EditText
                    android:id="@+id/send_message_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rect_without_border"
                    android:padding="8dp"
                    android:hint="Написать сообщение... "
                    android:inputType=""/>


            </android.support.v7.widget.CardView>


        </LinearLayout>
        <ImageView
            android:id="@+id/send_message_send"
            android:layout_weight="1.3"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/linearLayout0"
            android:layout_margin="5dp"
            android:layout_gravity="right"
            android:src="@mipmap/button" />

    </LinearLayout>

</RelativeLayout>
