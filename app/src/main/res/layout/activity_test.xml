<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.9"
    android:background="@color/colorTestBack"
    android:orientation="vertical"
    android:weightSum="25"
    tools:context="kz.production.kuanysh.tarelka.ui.activities.test.TestActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="2.5"
        android:layout_width="match_parent"
        android:background="@drawable/shape_bottom_dark"
        android:layout_height="0dp"
        android:weightSum="25">

        <TextView
            android:id="@+id/test_current_question_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:paddingLeft="30dp"
            android:text="1"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/test_all_question_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="left|bottom"
            android:paddingBottom="5dp"
            android:paddingLeft="2dp"
            android:text="из 20"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/test_cancell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="17"
            android:gravity="right|bottom"
            android:paddingBottom="5dp"
            android:paddingRight="15dp"
            android:text="Отменить"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/test_question"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="3"
        android:background="@drawable/shape_bottom_dark"
        android:gravity="center|left"
        android:paddingLeft="30dp"
        android:text="Что?Где?Когда?"
        android:textColor="@color/colorWhite"
        android:textSize="19sp" />

    <RadioGroup
        android:id="@+id/test_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="14.5"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:weightSum="5">

        <RadioButton
            android:id="@+id/test_ans1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:button="@drawable/shape_radiobutton"
            android:checked="false"
            android:text=" Ответ 1"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/test_ans2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:button="@drawable/shape_radiobutton"
            android:checked="false"
            android:text=" Ответ 1"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/test_ans3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:button="@drawable/shape_radiobutton"
            android:checked="false"
            android:text=" Ответ 1"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/test_ans4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:button="@drawable/shape_radiobutton"
            android:checked="false"
            android:text=" Ответ 1"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />

        <RadioButton
            android:id="@+id/test_ans5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:button="@drawable/shape_radiobutton"
            android:checked="false"
            android:text=" Ответ 1"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />
    </RadioGroup>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:weightSum="6">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:visibility="invisible"
            app:srcCompat="@mipmap/btn_test_left" />

        <ImageView
            android:id="@+id/test_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            app:srcCompat="@mipmap/btn_test_right" />

    </LinearLayout>

</LinearLayout>
